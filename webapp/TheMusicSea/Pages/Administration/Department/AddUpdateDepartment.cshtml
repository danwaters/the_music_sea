@page
@model TheMusicSea.Pages.Administration.Department.AddUpdateDepartmentModel
@{
    ViewData["Title"] = "Add New Department";
}
<div class="text-center">
    <h1 class="display-4">Administration - Departments</h1>
    @if(Model.DepartmentID == null)
    {
        <p><strong>Add a new department below</strong></p>
    }
    else
    {
        <p><strong>Update the department below</strong></p>
    }
</div>
<hr />
<div class="container">
    <form method="post">
        <input type="hidden" asp-for="DepartmentID"/>
        <div class="form-group row">
            <label asp-for="Name" class="col-2">Name</label>
            <input asp-for="Name" class="col-2" />
        </div>
        <div class="form-group row">
            <label asp-for="Description" class="col-2">Description</label>
            <input asp-for="Description" class="col-2" />
        </div>
        @if(Model.DepartmentID == null)
        {
            <input type="submit" value="Add Department" />
        }
        else
        {
            <input type="submit" value="Update Department" />
        }
    </form>
</div>
