@page
@model TheMusicSea.Pages.Administration.SalesEngineer.AddUpdateSalesEngineerModel
@{
    ViewData["Title"] = "Sales Engineers";
}
<div class="text-center">
    <h1 class="display-4">Administration - Departments</h1>
    @if(Model.SalesEngineerID == null)
    {
        <p><strong>Add a new sales engineer below</strong></p>
    }
    else
    {
        <p><strong>Update the sales engineer below</strong></p>
    }
</div>
<hr />
<div class="container">
    <form method="post">
        <input type="hidden" asp-for="SalesEngineerID"/>
        <div class="form-group row">
            <label asp-for="FirstName" class="col-2">First Name</label>
            <input asp-for="FirstName" class="col-2" />
        </div>
        <div class="form-group row">
            <label asp-for="LastName" class="col-2">Last Name</label>
            <input asp-for="LastName" class="col-2" />
        </div>
        <div class="form-group row">
            <label asp-for="Email" class="col-2">Email</label>
            <input asp-for="Email" class="col-2" />
        </div>
        <div class="form-group row">
            <label asp-for="Phone" class="col-2">Phone</label>
            <input asp-for="Phone" class="col-2" />
        </div>
        <div class="form-group row">
            <label asp-for="SpecialtyDepartmentID" class="col-2">Specialty Department</label>
            <select name="SpecialtyDepartmentID" asp-for="SpecialtyDepartmentID" asp-items="Model.DepartmentOptions" class="col-2"></select>
        </div>
        <div class="form-group row">
            <label asp-for="PhotoURI" class="col-2">Path to photo</label>
            <input asp-for="PhotoURI" class="col-2" />
        </div>
        @if(Model.SalesEngineerID == null)
        {
            <input type="submit" value="Add Sales Engineer" />
        }
        else
        {
            <input type="submit" value="Update Sales Engineer" />
        }
    </form>
</div>
